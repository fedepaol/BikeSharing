<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@android:color/white"
        android:paddingLeft="16dip"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
        android:paddingRight="2dip"
        android:layout_marginLeft="12dip"
        android:background="@color/colorPrimary"
        android:id="@+id/update_view_message"
        tools:text="12:55 Downloading.."/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update_view_background"
            app:srcCompat="@drawable/ic_progress_background_24pxsvg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update_view_icon"
            app:srcCompat="@drawable/ic_autorenew_white_24px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update_view_icon_done"
            app:srcCompat="@drawable/ic_done_white_24px"/>
</FrameLayout>